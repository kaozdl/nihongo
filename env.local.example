# Local Development Environment Configuration
# Copy this file to .env in the project root

# Flask Environment
FLASK_ENV=development
FLASK_APP=app.py
FLASK_DEBUG=1

# Secret Key (generate a random string for production)
SECRET_KEY=dev-secret-key-change-in-production

# Database Configuration
# For local development, SQLite is used by default
# Leave empty to use default: sqlite:///jlpt.db
DATABASE_URL=

# SQL Echo (set to True to see SQL queries in console)
SQL_ECHO=False

# Server Configuration
FLASK_RUN_HOST=127.0.0.1
FLASK_RUN_PORT=5000

# Optional: Enable auto-reload on file changes
FLASK_RUN_EXTRA_FILES=

